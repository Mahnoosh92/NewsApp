<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_26</item>
    </style>

    <style name="Subheader4">
        <item name="android:textColor">@color/black_600</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/black_600</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/padding_20</item>
        <item name="android:paddingBottom">@dimen/padding_20</item>
    </style>

    <style name="Button_login">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconSize">18dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorPrimary">@color/red_500</item>
    </style>

    <style name="TextInputLayoutNoBorder" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_botton_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
</resources>