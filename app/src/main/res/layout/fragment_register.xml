<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/fixed_40_dp"
    tools:context=".ui.auth.register.RegisterFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/fixed_300_dp"
        android:layout_height="@dimen/fixed_300_dp"
        android:layout_marginTop="@dimen/fixed_8_dp"
        app:lottie_rawRes="@raw/loginsignup"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_gravity="center"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:background="@null"
        app:cardElevation="@dimen/elevation_10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/padding_10">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/register_text"
                style="@style/Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/title_registerFragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_register"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/register_text"
                app:startIconDrawable="@drawable/ic_baseline_login_24"
                app:startIconTint="@color/black_600">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/username"
                    style="@style/EditText"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/hint_username_registerFragment" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_register"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="6"
                app:layout_constraintTop_toBottomOf="@id/username_register"
                app:startIconDrawable="@drawable/ic_baseline_password_24"
                app:startIconTint="@color/black_600">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:hint="@string/hint_password_registerFragment" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.mahdavi.newsapp.utils.widgets.ProgressButton
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_16"
                app:pb_enabled="false"
                app:pb_text="@string/title_registerFragment"
                app:icon="@drawable/ic_baseline_navigate_next_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password_register"
                />
<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/register_button"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="@dimen/margin_16"-->
<!--                android:enabled="false"-->
<!--                android:text="@string/title_registerFragment"-->
<!--                app:icon="@drawable/ic_baseline_navigate_next_24"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/password_register" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>