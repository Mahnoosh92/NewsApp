<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.DetailsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fixed_250_dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_details"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="salam"
        android:layout_marginStart="@dimen/fixed_40_dp"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/favourite_details"
        android:layout_width="@dimen/fixed_40_dp"
        android:layout_height="@dimen/fixed_40_dp"
        android:src="@drawable/heart_plus_filled"
        app:layout_constraintStart_toEndOf="@+id/title_details"
        app:layout_constraintTop_toBottomOf="@+id/title_details"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/fixed_40_dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>