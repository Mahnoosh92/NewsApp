<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_20">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/camera_icon"
        android:layout_width="@dimen/fixed_40_dp"
        android:layout_height="@dimen/fixed_40_dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/camera_txt"
        app:layout_constraintEnd_toStartOf="@+id/camera_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/camera_txt" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/camera_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:text="@string/camera"
        android:textSize="@dimen/font_size_18"
        app:layout_constraintStart_toEndOf="@+id/camera_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gallery_icon"
        android:layout_width="@dimen/fixed_40_dp"
        android:layout_height="@dimen/fixed_40_dp"
        android:layout_marginTop="@dimen/margin_16"
        android:src="@drawable/ic_gallery"
        app:layout_constraintEnd_toStartOf="@+id/gallery_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/gallery_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:text="@string/gallery"
        android:textSize="@dimen/font_size_18"
        app:layout_constraintBottom_toBottomOf="@+id/gallery_icon"
        app:layout_constraintStart_toEndOf="@+id/gallery_icon"
        app:layout_constraintTop_toTopOf="@+id/gallery_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
